@page
@model WebApplication2.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Подробнее";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/details.css" asp-append-version="true"/>
</head>
<h1>Карточка рецепта</h1>
<div class="background-image"></div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>Название рецепта</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Recept)
        </dd>
        <dt class="col-sm-2">   
            <p>Описание</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Description)
        </dd>
        <dt class="col-sm-2">
            <p>Фото</p>
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.User.Photo" alt="Изображение" class="recipe-image" />
        </dd>
        <dt class="col-sm-2">
            <p>Способ приготовления</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Sposob)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Перейти к рецептам</a>
</div>
</html>