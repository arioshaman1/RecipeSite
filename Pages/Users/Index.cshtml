@page
@model WebApplication2.Pages.Users.IndexModel

@{
ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/index1.css" asp-append-version="true"/>
</head>
<!-- Блок с фоновым изображением и эффектом размытия -->
<div class="background-blur"></div>

<!-- Основной контент страницы -->
<div class="content">
    <h1>Рецепты</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Фото</th>
            <th>
                Описание
            </th>

            <th>Тип блюда</th>
            
        </tr>
        
        </thead>
        <tbody>
        @foreach (var item in Model.User)
        {
            <tr>
                
                <td><img src="@item.Photo" alt="Изображение" class="recipe-image"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recept)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>


                <td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-details">Подробнее о рецепте</a>
                    </td>

                </td>
            </tr>
        }
        </tbody>
    </table>
    <p>
    </p>
