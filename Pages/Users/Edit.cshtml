@page
@model WebApplication2.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Измените рецепт</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.ID" class="control-label">ID</label>
                <input asp-for="User.ID" class="form-control" />
                <span asp-validation-for="User.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Recept" class="control-label">Название рецепта</label>
                <input asp-for="User.Recept" class="form-control" />
                <span asp-validation-for="User.Recept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Description" class="control-label">Опишите ваше блюдо</label>
                <input asp-for="User.Description" class="form-control description-input" />
                <span asp-validation-for="User.Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="User.Type" class="control-label">Выберите тип блюда</label>
                <select asp-for="User.Type" class="form-control">
                    <option value="Первое блюдо">Первое блюдо</option>
                    <option value="Второе блюдо">Второе блюдо</option>
                    <option value="Салат">Салат</option>
                    <option value="Десерт">Десерт</option>
                </select>
                <span asp-validation-for="User.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Description" class="control-label">Введите url фото</label>
                <input asp-for="User.Photo" class="form-control"/>
                <span asp-validation-for="User.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Sposob" class="control-label">Добавьте способ приготовления блюда</label>
                <input asp-for="User.Sposob" class="form-control"/>
                <span asp-validation-for="User.Sposob" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Отмена</a>
</div>
